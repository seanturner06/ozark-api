generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Episode {
  id            Int      @id @default(autoincrement())
  episodeNumber Int
  title         String
  imbdRating    Float?
  viewerRatnig  Float?
  description   String?
  seasonId      Int
  airDate       DateTime
  season        Season   @relation(fields: [seasonId], references: [id])

  @@unique([seasonId, episodeNumber])
}

model Season {
  id           Int       @id @default(autoincrement())
  seasonNumber Int
  imbdRating   Float?
  viewerRating Float?
  episodes     Episode[]
}
